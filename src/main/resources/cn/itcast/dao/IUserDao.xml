<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <!-- mapper映射文件 -->
 <!-- namespace指定执行哪个类中的方法 -->
<mapper namespace="cn.itcast.dao.IUserDao">
	<!-- id执行方法的名称 resultType只需要指定实体类全限定类名即可-->
	<select id="selectAllUser" resultType="cn.itcast.domain.User">
		select * from user
	</select>
</mapper>